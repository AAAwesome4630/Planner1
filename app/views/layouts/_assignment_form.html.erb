<%= form_for @assignment do |f| %>

    <%= f.hidden_field :classroom_id, :value => @classroom_id %>

  <div class="field">
    <%= f.label :due_date %><br />
    <%= f.date_field :due_date, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
  
<% end %>